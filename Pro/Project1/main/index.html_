                    <a href="#" class="button info" onclick="close_create_node_modal()">Cancel</a>
                    <a href="#" class="button success" onclick="CreateRecord()">Create</a>
                </div>
            </div>
        </form>
        <a class="close-reveal-modal" aria-label="Close">&#215;</a>
